@model MVCHenryTenorio.Models.ViewModels.BitacoraViewModel

@{
    ViewBag.Title = "Bitacora Sistema";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Index", "Bitacora", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-12">
            <div>
                @Html.LabelFor(d => d.fechaInicio) <br />
                @Html.EditorFor(d => d.fechaInicio, null)
            </div>
            <div>
                @Html.LabelFor(d => d.fechaFin) <br />
                @Html.EditorFor(d => d.fechaFin, null)
            </div>
            <div>
                @Html.LabelFor(d => d.tabla)
                @Html.TextBoxFor(d => d.tabla, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.tabla, "", new { @class = ".rojo" })
            </div>
            <div>
                @Html.LabelFor(d => d.usuario)
                @Html.TextBoxFor(d => d.usuario, "", new { @class = "form-control" })
            </div>
            <div>
                @Html.LabelFor(d => d.operacion)
                @Html.TextBoxFor(d => d.operacion, "", new { @class = "form-control" })
            </div>
            <br />
            <div style="text-align:right;">
                <input type="submit" value="Buscar Bitacora" class="btn btn-primary" />
            </div>
        </div>


    </div>

    <div class="row">
        <div class="col-md-12">

            <table class="table">
                <tr>
                    <th>Detalle Bitacora</th>
                </tr>

                @foreach (var item in Model.detalleBitacora)
                {
                    <tr>
                        <td>@item.detalle</td>
                    </tr>
                }

            </table>

        </div>


    </div>

}